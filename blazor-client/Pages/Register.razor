@page "/register"
@using blazor_client.Models

<div class="card">
    <h4 class="card-header">Register</h4>
    <div class="card-body">
        <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            <div class="form-group">
                <label>Email</label>
                <InputText @bind-Value="model.email" class="form-control" />
                <ValidationMessage For="@(() => model.email)" />
            </div>
            <div class="form-group">
                <label>Login</label>
                <InputText @bind-Value="model.login" class="form-control" />
                <ValidationMessage For="@(() => model.login)" />
            </div>
            <div class="form-group">
                <label>Пароль</label>
                <InputText @bind-Value="model.password" type="password" class="form-control" />
                <ValidationMessage For="@(() => model.password)" />
            </div>
            <button disabled="@loading" class="btn btn-primary">
                @if (loading) 
                {
                    <span class="spinner-border spinner-border-sm mr-1"></span>
                }
                Register
            </button>
            <NavLink href="/" class="btn btn-link">Cancel</NavLink>
        </EditForm>
    </div>
</div>


@code {
    private RegisterUserModel model = new RegisterUserModel();
    private bool loading;

    private async void OnValidSubmit()
    {        
        loading = true;
    }
}
